---
import type { ModuleCourseProps, ModuleClass } from "../../types/Props";

const { classes, moduleNumber } = Astro.props as ModuleCourseProps;
---

<div id="course-module">
  <h3>{moduleNumber}</h3>
  <article>
    {
      classes.map((item) => (
        <p class="description">
          <strong>{item.class}: </strong>
          {item.description}
        </p>
      ))
    }
  </article>
</div>

<style>
  #course-module {
    & h3 {
      font-size: 27px;
      font-weight: 500;
      margin-bottom: 10px;
    }

    & article {
      border-radius: 10px;
      border: 1px solid var(--lm-primary, #ed8207);
      background: var(--lm-background, #fefdfb);
      padding: 1em;
    }
  }
</style>
